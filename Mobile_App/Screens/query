SELECT messages.* FROM messages,(SELECT MAX(id) as lastid
                  FROM messages
                  WHERE (messages.receipient_id=11 OR messages.sender_id=11)
                  GROUP BY CONCAT(LEAST(messages.receipient_id,messages.sender_id),'.',
                  GREATEST(messages.receipient_id,messages.sender_id))) as conversations
                  WHERE id=conversations.lastid
                  ORDER BY messages.created_at DESC;






